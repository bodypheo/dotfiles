(sakura -c 80 -r 20 -h -t 'Tareas para hoy' -e 'task') &
#setxkbmap -option "grp:switch,grp:shifts_toggle,grp_led:scroll" -layout "es,gb" &
#(sleep 3s && xxkb) &
#Iniciar icedove
(sleep 5s && thunderbird) &
(sleep 10s && volumeicon) &



